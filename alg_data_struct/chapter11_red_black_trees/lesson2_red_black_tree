class RBNode:
    def __init__(self, val):
        self.red = False
        self.parent = None
        self.val = val
        self.left = None
        self.right = None


class RBTree:
    def __init__(self):
        self.nil = RBNode(None)
        self.nil.red = False
        self.nil.left = None
        self.nil.right = None
        self.root = self.nil

    def insert(self, val):
        new_node = RBNode(val)
        new_node.parent = None
        new_node.left = self.nil #Yeah, as expected, I was initializing a fresh RBNode() for every nil leaf and that means it's just a completely new object outside the tree
        new_node.right = self.nil
        new_node.red = True
        parent = None
        current = self.root
        while current != self.nil:
            parent = current
            if new_node.val < current.val:
                current = current.left
            elif new_node.val > current.val:
                current = current.right
            else:
                return 
        new_node.parent = parent
        if parent == None:
            self.root = new_node
        else:
            if new_node.val < parent.val:
                parent.left = new_node #parent = parent.left simply changes the local variable parent to point somewhere else. To make real changes to any object, you must modify its fields with a new value, like new_node
            elif new_node.val > parent.val:
                parent.right = new_node
                return 
